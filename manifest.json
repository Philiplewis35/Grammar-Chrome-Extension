{
  "name": "Passive voice grammar checker",
  "version": "1.0",
  "description": "A tool to help writers use active voice",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["jquery-3.4.1.js", "background.js"],
    "persistent": false
  },
  "permissions": [
    "https://moodle.port.ac.uk/my/",
    "https://docs.google.com/document/*",
    "http://localhost/*",
    "storage"
  ],
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "run_at": "document_start",
    "js": ["jquery-3.4.1.js", "arrive.min.js", "observer.js", "interface.js", "mark.min.js", "js/bootstrap.js"],
    "css": ["style.css", "css/bootstrap.css"]
   }],
   "externally_connectable": {
    "matches": ["https://grammar-checker1.herokuapp.com/*"]
  }
}
